# Logout
alt + q; l
	bspc quit

# Raises volume
#XF86AudioRaiseVolume
    #amixer set Master 3%+

# Lowers volume
#XF86AudioLowerVolume
    #amixer set Master 3%-

# Mutes
#XF86AudioMute
    #amixer set Master toggle

###############################
#

# Closes focused window
alt + c
    bspc window --close

# Flips leaves horizontally
#alt + c
    #bspc desktop -F horizontal

# Flips leaves vertically
#alt + v
    #bspc desktop -F vertical

# Trying to figure out what this does
#alt + t
    #bspc desktop -l next

# Balances the tree
alt + b
    bspc desktop --balance

# Toggles floating or fullscreen
alt + {t,f}
    bspc window --toggle {floating,fullscreen}

# Toggles between last tag
#alt + {grave,Tab}
    #bspc {window,desktop} -f last

#alt + {o,i}
    #bspc control --record-history off; \
    #bspc window {older,newer} -f; \
    #bspc control --record-history on

# Move current window into the biggest panel
alt + m
    bspc window --swap biggest

# Move current window into the presel area
alt + y
	bspc window --to-window last.manual

# Flip the windows
alt + {comma,period}
	bspc desktop --flip {vertical,horizontal}

# Rotate the windows
alt + shift + {comma,period}
	bspc desktop --rotate {270,90}

#alt + bracket{left,right}
    #bspc desktop -f {prev,next}

# Presel direction
alt + ctrl + {h,j,k,l}
    bspc window --presel {left,down,up,right}

# Cancel presel
alt + ctrl + space
    bspc window --presel cancel

#alt + alt + {h,j,k,l}
    #bspc window -e {left,down,up,right} push

#alt + alt + shift + {h,j,k,l}
    #bspc window -e {right,up,down,left} pull

alt + ctrl + {1-9}
    bspc window -r 0.{1-9}

alt + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

~button1
    bspc pointer -g focus

alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
    bspc pointer -t %i %i

alt + @button{1-3}
    bspc pointer -u quit 1
	
# Focus / swap window in direction
alt + {_,shift + }{h,j,k,l}
    bspc window --{focus,swap} {left,down,up,right}

alt + p
	toggle-window-gap 80
	
#
# wm independent hotkeys
#

alt + Return
	urxvtc

alt + shift + w
	chromium

alt + space
    interrobang

alt + q; {s,r,p}
	systemctl {suspend,reboot,poweroff}

# Reload sxhkd
alt + shift + Escape
    pkill -USR1 -x sxhkd
