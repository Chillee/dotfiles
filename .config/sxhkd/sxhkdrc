# Logout
alt + q; {l,k}
	 killall panel; {bspc quit,panel}

# Closes focused window
alt + c
    bspc window --close

# Balances the tree
alt + b
    bspc desktop --balance

# Resets the window split ratios
alt + e
	bspc desktop --equalize

# Toggles floating or fullscreen
alt + {t,shift + f}
    bspc window --toggle {floating,fullscreen}

# Toggles monocle mode
alt + f
	bspc desktop --layout next

# Focus next/previous occupied desktop
alt + {_,shift +} n
	bspc desktop --focus {next,prev}.occupied

# Toggles between last tag
#alt + {grave,Tab}
    #bspc {window,desktop} -f last

#alt + {o,i}
    #bspc control --record-history off; \
    #bspc window {older,newer} -f; \
    #bspc control --record-history on

# Move current window into the biggest panel
alt + m
    bspc window --swap biggest

# Move current window into the presel area
alt + y
	bspc window --to-window last.manual

# Flip the windows
alt + {comma,period}
	bspc desktop --flip {vertical,horizontal}

# Rotate the windows
alt + shift + {comma,period}
	bspc desktop --rotate {270,90}

# Resize windows
alt + {Right,Left}
	bspc window -e right {+,-}100

alt + {Down,Up}
	bspc window -e down {+,-}100

#alt + bracket{left,right}
    #bspc desktop -f {prev,next}

# Presel direction
alt + ctrl + {h,j,k,l}
    bspc window --presel {left,down,up,right}

# Cancel presel
alt + ctrl + space
    bspc window --presel cancel

#alt + alt + {h,j,k,l}
    #bspc window -e {left,down,up,right} push

#alt + alt + shift + {h,j,k,l}
    #bspc window -e {right,up,down,left} pull

alt + ctrl + {1-9}
    bspc window -r 0.{1-9}

alt + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

alt + shift + {Left,Right}
	bspc desktop --swap {prev,next}

#alt + {_,shift} + grave
#	deskmod {add, subtract}

~button1
    bspc pointer -g focus

alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
    bspc pointer -t %i %i

alt + @button{1-3}
    bspc pointer -u quit 1
	
# Focus / swap window in direction
alt + {_,shift + }{h,j,k,l}
    bspc window --{focus,swap} {left,down,up,right}

alt + p
	toggle-window-gap 80
	
#
# wm independent hotkeys
#

@alt + {_,shift + } s
	scrot {_,-s} -q75 "$HOME/pic/shots/%Y-%m-%d_$RANDOM.png"

alt + Return
	termite

alt + F2
	bspc rule -a termite floating=on center=on --one-shot;\
	termite -e wifi

alt + shift + w
	chromium

alt + space
    interrobang

alt + q; {s,r,p}
	systemctl {suspend,reboot,poweroff}

# Reload sxhkd
alt + shift + Escape
    pkill -USR1 -x sxhkd

# Raises volume
{alt + F12,XF86AudioRaiseVolume}
    amixer set Master 3%+;\
	echo "V" > "$PANEL_FIFO"

# Lowers volume
{alt + F11,XF86AudioLowerVolume}
    amixer set Master 3%-;\
	echo "V" > "$PANEL_FIFO"

# Mutes
{alt + F10,XF86AudioMute}
    amixer set Master toggle;\
	echo "V" > "$PANEL_FIFO"

# Brightens keyboard backlight
{alt + F4,XF86KbdBrightnessUp}
	asus-kbd-backlight up

# Dims keyboard backlight
{alt + F3,XF86KbdBrightnessDown}
	asus-kbd-backlight down
