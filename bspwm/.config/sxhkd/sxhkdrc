
# bspwm hotkeys
#

alt + shift + q ; {l, s, p, r}
	{bspc quit, systemctl suspend, poweroff, reboot}

alt + c
	bspc node --close

alt + equal
	bspc node @/ --equalize

alt + b
	bspc node @/ --balance

alt + {n,i}
	bspc desktop {next,prev} -f

alt + {1-9,0}
	bspc desktop ^{1-9,0} -f

alt + ctrl + shift + {n,i}
	bspc desktop --bubble {next,prev} --focus

alt + f
	bspc node --state \~floating

alt + y
	bspc node --to-node last.!automatic

alt + m
	bspc desktop --layout next

alt + {_,shift +} {h,j,k,l}
	bspc node {--focus,--swap} {west,south,north,east}

alt + {_,shift + }Tab
	bspc node --focus {next,prev}

alt + {_,shift + }r
	bspc node @/ --rotate {270,90}

alt + {comma,period}
	bspc node @/ --circulate {backward,forward}

alt + ctrl + {h,j,k,l}
	bspc node --presel-dir \~{west,south,north,east}

~button1
	bspc pointer --grab focus

alt + button{1-3}
	bspc pointer --grab {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer --track %i %i

alt + @button{1-3}
	bspc pointer --ungrab

alt + shift + {n,i}
	bspc node --to-desktop {next,prev} --focus

#
# wm-independent hotkeys
#

alt + Escape
	xfce4-popup-whiskermenu

alt + Return
	gnome-terminal

alt + w
	chromium

alt + e
	thunar

alt + x
	xournal

alt + s
	xfce4-screenshooter

# for external keyboard
alt + {Insert, Delete, BackSpace}
	amixer set Master {2%+, 2%-, toggle}

# for laptop
{XF86AudioRaiseVolume, XF86AudioLowerVolume, XF86AudioMute}
	amixer set Master {2%+, 2%-, toggle}
alt + {Right, Left}
	amixer set Master {2%+, 2%-, toggle}

# make sxhkd reload its configuration files:
alt + shift + Escape
	pkill -USR1 -x sxhkd

alt + o
	bspc rule --add Gnome-terminal --one-shot state=floating &&\
	gnome-terminal -x /usr/bin/zsh -ic 'exo-open $(ag --nocolor -g "" | fzf)'
