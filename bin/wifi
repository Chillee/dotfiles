#! /bin/sh

nmcli dev wifi list | grep "'" |\
	while IFS="'" read -ra line ; do
		echo "${line[1]}"
	done
echo

echo "Network name:"
read -r netName

echo "Password:"
read -rs netPasswd

if $(nmcli dev wifi con "$netName" password "$netPasswd"); then
	echo "Connected."
	sleep 0.5
	exit
else
	echo "Error connecting."
	read
	exit 1
fi
