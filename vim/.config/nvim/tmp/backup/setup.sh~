#!/bin/bash

run_bar() {
	sleep 1.5
	./mdc root -S lemonbar |\
		lemonbar -g 1000x30+32 -B '#2D2D2D' -F '#EDEDED' -f 'sans:size=10' |\
		while read num; do
			./mdc root -c $num -f
		done
}

init_desktops() {
	sleep 1.5
	./mdc root -a
	./mdc root -a
	./mdc root -a
	./mdc root -a
	./mdc root -a

	./mdc root -c 0 -A name email
	./mdc root -c 1 -A name chat
	./mdc root -c 2 -A name music
	./mdc root -c 3 -A name notes
	./mdc root -c 4 -A name auv
}

init_desktops
run_bar
