from mission.missions.line import Line
from mission.missions.pause import Pause
from mission.framework.combinators import *

def Polygon(sides, length, speed, pause):
    subtasks = []
    for i in range(sides):
        subtasks.append(Line(length, i/sides*360, speed))
        subtasks.append(Pause(pause))

    return Sequential(subtasks=tuple(subtasks))

mission = Polygon(5, 2, 0.3, 1)
